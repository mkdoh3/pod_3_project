<h1>New Appointment</h1> 

<%=form_for @appointment do |f|%>
    <label>Select Patient</label>
    <%=f.collection_select :patient_id, Patient.all, :id, :name, include_blank: true%>
    <p><%=f.label :time%>
    <%=f.time_field :time%></p>
    <p><%=f.label :date%>
    <%=f.date_field :date%></p>
    <p><%=f.label :notes%>
    <%=f.text_area :notes%></p>
    <%=f.submit%>
    <%end%>